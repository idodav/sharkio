{
  "name": "traffic-cli",
  "version": "0.0.1",
  "description": "Micro service network monitoring and development tool",
  "type": "module",
  "main": "/lib/index.js",
  "bin": {
    "traffic-cli":  "./bin/traffic-cli.js"
  },
  "bundledDependencies": true,
    "keywords": [
    "cli",
    "traffic-cli",
    "community",
    "typescript",
    "javascript",
    "nodejs",
    "documentation",
    "generator",
    "template",
    "markdown"
  ],
  "scripts": {
    "start": "npm run build && npm run global",
    "test": "npm run lint && npm run test:unit",
    "test:unit": "nyc mocha",
    "lint": "tslint -p . --fix",
    "build": "npm run clean:some && tsc -p .",
    "global": "npm i -g && traffic-cli",
    "clean:some": "rm -rf ./lib ./docs",
    "clean:all": "rm -rf ./node_modules ./package-lock.json ./lib ./docs",
    "refresh": "npm run clean:all && npm install",
    "tscov": "tscov --min-coverage 90",
    "tscov:d": "tscov --details",
    "publish-package": "npm run build && npm publish",
    "docs": "typedoc --out docs ./src"
  },
  "author": "Hadar Hezi",
  "license": "ISC",
  "dependencies": {
    "@types/fs-extra": "^11.0.1",
    "axios": "^1.4.0",
    "concurrently": "^8.2.0",
    "figlet": "^1.6.0",
    "fs-extra": "^11.1.1",
    "inquirer": "^9.2.7",
    "inversify": "^6.0.1",
    "kill-port": "^2.0.1",
    "kleur": "^4.1.5",
    "nodemon": "^2.0.22",
    "open": "^9.1.0",
    "reflect-metadata": "^0.1.13",
    "swagger-jsdoc": "^6.2.8",
    "traffic-dashboard": "file:traffic-dashboard",
    "traffic-sniffer": "file:traffic-sniffer",
    "tslib": "^2.6.0",
    "vite": "^4.4.2",
    "yargs": "^17.7.2"
  },
  "files": [
    "index.js",
    "package.json",
    "node_modules",
    "traffic-sniffer",
    "traffic-dashboard",
	"traffic-cli"
  ],
  "bundleDependencies": [
    "axios",
    "kill-port",
    "traffic-dashboard",
    "traffic-sniffer",
    "yargs"
  ],

  "devDependencies": {
    "@liftr/tscov": "^2.0.0",
	"@types/chai": "^4.2.22",
	"@types/fs-extra": "^9.0.13",
	"@types/mocha": "^9.0.0",
	"mocha": "^9.1.2",
	"@types/sinon": "^10.0.4",
	"chai": "^4.3.4",
	"nyc": "^15.1.0",
	"sinon": "^11.1.2",
	"tslint": "^6.1.3",
    "sinon-chai": "^3.7.0",
    "@types/sinon-chai": "^3.2.5",
    "mocha-junit-reporter": "^2.0.0",
    "@types/figlet": "^1.5.6",
    "@types/inquirer": "^9.0.3",
    "@types/node": "^20.4.1",
    "express": "^4.18.2",
    "husky": "^8.0.3",
    "prettier": "^3.0.0",
    "ts-node": "^10.9.1",
    "typedoc": "^0.24.8",
    "typescript": "^5.1.6"
  }
}
